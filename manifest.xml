<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="MailApp">

  <Id>c2a8b650-50b2-446e-a8e9-bffa6698b77f</Id>
  <Version>1.0.3.7</Version>
  <ProviderName>Öztiryakiler Bilgi Teknolojileri</ProviderName>
  <DefaultLocale>tr-TR</DefaultLocale>
  <DisplayName DefaultValue="Otomatik Yanıt Yöneticisi"/>
  <Description DefaultValue="Şirket standart otomatik yanıt mesajları için gelişmiş yönetici"/>

  <IconUrl DefaultValue="https://zealous-coast-0823e701e.2.azurestaticapps.net/assets/icon-64.png?v=1037"/>
  <HighResolutionIconUrl DefaultValue="https://zealous-coast-0823e701e.2.azurestaticapps.net/assets/icon-128.png?v=1037"/>
  <SupportUrl DefaultValue="https://zealous-coast-0823e701e.2.azurestaticapps.net/"/>

  <Hosts><Host Name="Mailbox"/></Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- FormSettings: sadece SourceLocation (RequestedHeight YOK) -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://zealous-coast-0823e701e.2.azurestaticapps.net/taskpane.html"/>
        <RequestedHeight>350</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- v1.0 KÖK: sadece sarmalayıcı -->
  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
    xsi:type="VersionOverridesV1_0">

    <!-- === v1.1: Komut yüzeyleri + Module doğru sırada === -->
    <VersionOverrides
      xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
      xsi:type="VersionOverridesV1_1">

      <Requirements>
        <bt:Sets DefaultMinVersion="1.1">
          <bt:Set Name="Mailbox" MinVersion="1.1"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <FunctionFile resid="Commands.Url"/>

            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="MsgRead.Group">
                  <Label resid="Group.Label"/>
                  <Control xsi:type="Button" id="msgReadCommandSurface">
                    <Label resid="Button.Label"/>
                    <Supertip>
                      <Title resid="Button.Label"/>
                      <Description resid="Button.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16"/>
                      <bt:Image size="32" resid="Icon.32"/>
                      <bt:Image size="80" resid="Icon.80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                      <SupportsPinning>true</SupportsPinning>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="MsgCompose.Group">
                  <Label resid="Group.Label"/>
                  <Control xsi:type="Button" id="Hello.Button.Compose">
                    <Label resid="Button.Label"/>
                    <Supertip>
                      <Title resid="Button.Label"/>
                      <Description resid="Button.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16"/>
                      <bt:Image size="32" resid="Icon.32"/>
                      <bt:Image size="80" resid="Icon.80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                      <SupportsPinning>true</SupportsPinning>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16" DefaultValue="https://zealous-coast-0823e701e.2.azurestaticapps.net/assets/icon-16.png"/>
          <bt:Image id="Icon.32" DefaultValue="https://zealous-coast-0823e701e.2.azurestaticapps.net/assets/icon-32.png"/>
          <bt:Image id="Icon.80" DefaultValue="https://zealous-coast-0823e701e.2.azurestaticapps.net/assets/icon-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Commands.Url" DefaultValue="https://zealous-coast-0823e701e.2.azurestaticapps.net/commands.html"/>
          <bt:Url id="Taskpane.Url" DefaultValue="https://zealous-coast-0823e701e.2.azurestaticapps.net/taskpane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="Group.Label"  DefaultValue="Otomatik Yanıt"/>
          <bt:String id="Button.Label" DefaultValue="Otomatik Yanıt Yöneticisi"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="Button.Tooltip" DefaultValue="Otomatik Yanıt Yöneticisini Aç"/>
        </bt:LongStrings>
      </Resources>

      <!-- SSO -->
      <WebApplicationInfo>
        <Id>c2a8b650-50b2-446e-a8e9-bffa6698b77f</Id>
        <Resource>api://zealous-coast-0823e701e.2.azurestaticapps.net/c2a8b650-50b2-446e-a8e9-bffa6698b77f</Resource>
        <Scopes>
          <Scope>access_as_user</Scope>
          <Scope>openid</Scope>
          <Scope>profile</Scope>
          <Scope>offline_access</Scope>
        </Scopes>
      </WebApplicationInfo>

    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
